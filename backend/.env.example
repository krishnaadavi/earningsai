# Backend environment
OPENAI_API_KEY=
# Guidance extraction
GUIDANCE_MODEL=gpt-4o-mini
GUIDANCE_MAX_CHUNKS=12
# Comma-separated origins or *
ALLOW_ORIGINS=http://localhost:3000,https://*.vercel.app
# Optional regex for wildcard domains (e.g., all vercel subdomains)
ALLOW_ORIGIN_REGEX=^https://.*\.vercel\.app$
# Budget guard (simple caps)
BUDGET_MAX_QUERIES=50

# Persistence (P1)
# Example (Neon): postgres://USER:PASSWORD@HOST/DB?sslmode=require
DATABASE_URL=

# EDGAR / SEC
# Provide a descriptive user agent per SEC guidance
SEC_USER_AGENT=EarningsAI/1.0 (your-email@example.com)
# Cache TTLs (seconds)
SEC_CACHE_TTL_SECONDS=21600
SEC_HTML_CACHE_TTL_SECONDS=3600
# Limit number of recent filings scanned per ticker
SEC_MAX_FILINGS_SCAN=8
# Optional: generic UA fallback if needed
# USER_AGENT=EarningsAI/1.0 (your-email@example.com)

# Providers (optional)
FMP_API_KEY=
FINNHUB_API_KEY=
